{
  "name": "lisk-core-qa-external",
  "version": "0.0.1",
  "description": "Lisk core quality assurance",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all cucumber report",
    "cucumber": "./node_modules/.bin/cucumber-js features/**/*.feature --require step-definitions/**/*.ts --require-module ts-node/register --format-options '{\"snippetInterface\": \"async-await\"}' --format json:reports/cucumber-report.json --format summary",
    "report": "node reporters/cucumber-html-reporter.js",
    "lint": "tslint --format stylish --config tslint.json -e **/*.d.ts **/*.ts",
    "prebuild": "rimraf build",
    "build": "npm-run-all tsc lint",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiskHQ/lisk-core-qa-external.git"
  },
  "keywords": [
    "qa",
    "bdd",
    "cucumber"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LiskHQ/lisk-core-qa-external/issues"
  },
  "homepage": "https://github.com/LiskHQ/lisk-core-qa-external#readme",
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/cucumber": "^4.0.4",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.12.2",
    "bluebird": "^3.5.3",
    "chai": "^4.2.0",
    "cucumber": "^5.0.2",
    "cucumber-html-reporter": "^4.0.4",
    "jsome": "^2.5.0",
    "lisk-elements": "^1.0.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "tslint": "^5.11.0"
  }
}
